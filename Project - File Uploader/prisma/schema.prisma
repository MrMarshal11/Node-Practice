generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int       @id @default(autoincrement())
  fullname String
  username String    @unique
  password String
  sessions Session[]
}

model Session {
  sid       String   @id @default(cuid())
  userId    Int?
  user      users?   @relation(fields: [userId], references: [id])
  expiresAt DateTime
  data      String
}
