<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pokemon | team</title>
    <link rel="stylesheet" href="/trainers.css" />
  </head>
  <body>
    <h1><%= trainerName.charAt(0).toUpperCase() + trainerName.slice(1) %>'s Team</h1>
    <div class="teamDiv">
      <% team.forEach((obj) => { %>
        <div class="pokemonDiv">
          <h3><%= obj.pokemon.charAt(0).toUpperCase() + obj.pokemon.slice(1) %></h3>
          <% if (obj.imgUrl) { %>
            <img src="<%= obj.imgUrl %>" alt="<%= obj.pokemon %> Image" class="teamImg" />
          <% } else { %>
            <img src="/images/placeholder.png" alt="This isn't a pokemon buddy." class="teamImg" />
          <% } %>

        <!-- Hidden Delete Form -->
        <form action="/team/<%= trainerName %>/delete" method="POST" style="display:inline;">
          <input type="hidden" name="pokemonName" value="<%= obj.pokemon %>" />
          <button type="submit">Delete Pokemon?</button>
        </form>
        </div>
      <% }) %>
    </div>
    <div class="bottomRow">
      <button><a href="/newPokemon/<%= trainerName%>">Add Pokemon?</a></button>
      <button><a href="/trainers">Back to Trainer</a></button>
    </div>
  </body>
</html>
